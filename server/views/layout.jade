doctype 5
html
  head
    title= title
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.min.css')
    - if(pageConfig.ksDebug)
        link(rel='stylesheet/less', href='/assets/#{pageConfig.name}/#{pageConfig.version}/page/index.less')
        script(src='/assets/common/less-1.3.0-min.js')
    - else
        link(rel='stylesheet', href='/assets/#{pageConfig.name}/#{pageConfig.timestamp}/page/index-min.css')
    meta(name="viewport",content="width=device-width, initial-scale=1.0")
    script(src='http://a.tbcdn.cn/s/kissy/1.3.0/seed-min.js')
    script(src='/assets/common/package-config-min.js')
    script.
        FB.config({
            path: '/assets',
            name: '#{pageConfig.name}',
            version: '#{pageConfig.version}',
            pub: '#{pageConfig.timestamp}',
            tag: '#{pageConfig.timestampAppend}'
        });
  body
    a(href='/',title='切换应用',data-track="Click Logo").logo
        img(src='/images/logo-small.png')
    block content
    div.container
        .row-fluid
            .span12
                .footer
                    .links
                        i.icon-home
                        a(href='https://github.com/maxbbn/front-build') Github
                        |&nbsp;
                        i.icon-exclamation-sign
                        a(href='https://github.com/maxbbn/front-build/issues') Issues
                        |&nbsp;
                        i.icon-leaf
                        a(href='https://github.com/maxbbn/front-build/issues/11') Wishlist
                    p
                        |[
                        - if (currentStable() === 'error')
                            i.icon-info-sign(title='在线版本检查出错，请检查网络')
                        - else if (currentStable() === '...')
                            i.icon-time(title='checking...')
                        - else if (currentStable() === version)
                            i.icon-ok
                        - else if (currentStable() > version)
                            i.icon-circle-arrow-up(title='升级到 [#{currentStable()}]: npm install kissy-pie -g')
                        span.fbversion  #{version}
                        |]
    script.
      if (KISSY.UA.ie && KISSY.UA.ie < 9) {
        KISSY.use('common/ie');
      }
